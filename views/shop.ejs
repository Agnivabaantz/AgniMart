<%- include('partials/head')  %> 
<div class="container">
    <div class="row">
        <h1 class="shopheading">All <%=category%></h1>
            <div class="container gridwrapper">
                <% for(let product of products){ %>
                    <div class="card" style="width: 18rem;">
                        <img src="<%= product.imageUrl%>" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title"><%= product.name %></h5>
                            <p class="card-text"><%= product.description %></p>
                            <a href="/home/products/<%=product._id %>" class="btn btn-primary"><%= product.name %></a>
                        </div>
                    </div>
                <% } %>
            </div>
    </div>
    <div class="row">
        <% if(category !== 'Products'){ %>
            <a href="/home/products" class="btn btn-primary">View All Products</a>
        <% } %>
            <div class="container">
                <div class="row">
                    <a href="/home" class="btn btn-dark">Back</a>
                </div>
            </div>
    </div>
</div>
</body>
</html>