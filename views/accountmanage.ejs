<%- include('partials/head')  %> 
<div class="container">
    <div class="row"><h1 class="shopheading">Profile of <%=user.name%></h1></div>
    <div class="row">
        <form class="form-elements" action="/home/accountmanage" method="post" id="editAccount">
            <div class="row form-floating">
                <input class="form-control" type="text" name = "name" id="name" placeholder="name" value="<%=user.name%>" required>
                <label for="name">Fullname</label>
            </div>
            <div class="row form-floating">
                <input class="form-control" type="text" name = "username" id="username" placeholder="username" value="<%=user.username%>" required>
                <label for="username">Username</label>
            </div>
            <div class="row form-floating">
                    <input class="form-control" type="password" name = "password" id="password" placeholder="password" value="<%=user.password%>" required>
                    <label for="password">Password</label>
            </div>
            <div class="row form-floating">
                <input class="form-control" type="email" name = "email" id="email" placeholder="email" value="<%=user.email%>" required>
                <label for="email">Mail Address</label>
            </div>
            <div class="row">
                <button class="btn btn-success" id="submit">Update Profile</button>
            </div>
        </form>
    </div>
    <div class="row">
        <form action="/home" method="get" id="homeForm">
            <div class="row">
                <button class="btn btn-primary" id="home">Back to Home</button>
            </div>
        </form>
    </div>
</div>
</body>
</html> 